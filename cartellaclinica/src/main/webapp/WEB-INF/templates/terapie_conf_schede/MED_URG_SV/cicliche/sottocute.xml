<Terapia stile="liv0" a_ereditabili="">

	<UserInput tipo="text" name="NomeCiclo" a_globali="None=S" descr=""/>
	<UserInput tipo="text" name="NumeroCiclo" a_globali="None=S" descr=""/>
	<UserInput tipo="text" name="FarmaciSelezionati" a_globali="obligatory=S;None" descr=""/>
	 <UserInput tipo="text" name="dataInizioTerapia" a_globali="None" a_inserimento="Default=TODAY;"/>

	<GruppoFarmaciDescrizione classe="Label" a_globali="Intestazione">Farmaci</GruppoFarmaciDescrizione>
	<GruppoFarmaci tipo="1" a_globali="minimo=1;massimo=5" key="tipo">
		<Template file="Farmaci.xml" i="farmaco" />
	</GruppoFarmaci>
	
	<GruppoPrescrizioniDescrizione classe="Label" a_globali="Intestazione">Prescrizioni</GruppoPrescrizioniDescrizione>
	<GruppoPrescrizioni classe="Gruppo">
		<Riga classe="Gruppo" a_inserimento="None">    

			<UserInput classe="Options" tipo="radio" name="TipoPrescrizione" a_globali="obligatory=S;msg=Tipo prescrizione" value="">
				<OPTION value="5" a_globali="obbliga=hGiorniCiclo">Ciclica</OPTION>
			</UserInput>    
    
			<UserInput tipo="text" name="DataInizio" a_globali="obligatory=N;msg=Data inizio;Calendario=S;Disable" a_inserimento="Default=TODAY;CopyValueTo=dataInizioTerapia;" a_modifica="" descr="Data inizio"/>
			<UserInput tipo="text" name="OraInizio" a_globali="msg=Ora inserimento; Orario=S" a_modifica="" descr="Ora inizio" value="00:00"/>
			
			<UserInput tipo="text" name="NumeroGiorni" a_globali="Positive;obligatory=N;msg=Numero giorni;None"  descr="Numero giorni"/>
		</Riga>    
    	<Riga classe="Gruppo" a_inserimento="None">
			<UserInput tipo="text" name="DataFine"  descr="Data fine"/>
			<UserInput tipo="text" name="OraFine"  descr="Ora fine"/>      
		</Riga>		
		
		<Template file="Prescrizioni.xml" i="ciclica" />
	</GruppoPrescrizioni>
	<SettingDescrizione classe="Label" a_globali="Intestazione">Note</SettingDescrizione>
	<Setting classe="Gruppo">
		<Riga classe="Gruppo" a_globali="h=2">
			<UserInput tipo="textarea" name="Note"  descr="" rows="3" cols="30" />
		</Riga>
	</Setting>	
	
	<GruppoDatiInserimentoDescrizione classe="Label" a_inserimento="None" a_globali="Intestazione">Dati Inserimento</GruppoDatiInserimentoDescrizione>
	<GruppoAltri classe="Gruppo" a_inserimento="None" a_ereditabili="Disable">
	<Riga classe="Gruppo">
		<UserInput tipo="text" name="uteIns" a_globali="w=2;msg=Prescritto da"  descr="Prescritto da"/>
		<UserInput tipo="text" name="dtaIns" a_globali="msg=Data Prescrizione"  descr="Data Prescrizione"/>
		<UserInput tipo="text" name="oraIns" a_globali="msg=Ora Prescrizione"  descr="Ora Prescrizione"/>
	</Riga>
	<Riga classe="Gruppo">
		<UserInput tipo="text" name="uteChiusa" a_globali="w=2;msg=Chiusa da"  descr="Chiusa da"/>
		<UserInput tipo="text" name="dtaChiusa" a_globali="msg=Data Chiusura"  descr="Data Chiusura"/>
		<UserInput tipo="text" name="oraChiusa" a_globali="msg=Ora Chiusura"  descr="Ora Chiusura"/>
	</Riga>
	<Riga classe="Gruppo"  a_globali="h=2">
		<UserInput tipo="textarea" name="motChiusa" a_globali="msg=Motivazione"  descr="Motivazione Chiusura"/>
	</Riga>
	</GruppoAltri>
	<HtmlContent>
		<script>
			ModelloTerapia.init();			
		</script>		
	</HtmlContent>
</Terapia>